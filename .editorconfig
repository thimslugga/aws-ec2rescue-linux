# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
# Text is UTF-8
charset = utf-8
# Soft tabs
indent_style = space
# Two-space indentation
indent_size = 2
# Unix-style newlines
end_of_line = lf
# Newline ending every file
insert_final_newline = true
# Trim trailing whitespace
trim_trailing_whitespace = true

# 4 space indentation
[*.{py,java,r,R}]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{js,jsx,scss,css,json,y{a,}ml,html,cwl}]
indent_style = space
indent_size = 2

[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

[*.{md,Rmd,rst}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
